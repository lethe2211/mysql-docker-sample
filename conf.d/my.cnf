[client]
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci
port=3306
socket=/tmp/mysql.sock

[mysqld]
default-character-set=utf8mb4
port=3306
socket=/tmp/mysql.sock
key_buffer_size=16M
max_allowed_packet=8M

# Slow query log
slow_query_log=ON
long_query_time=0
slow-query-log-file=/var/lib/mysql/mysql-slow.log

[mysqldump]
quick
